pipeline {
    agent any
    environment {
        VIRTUAL_ENV = 'venv'
        PYTHONPATH = "${env.WORKSPACE}"
        DEPLOYDIR = 'C:\\Users\\hassa\\OneDrive\\Desktop\\test'
    }
    stages {
        stage('Setup') {
            steps {
                script {
                    if (!fileExists("${env.WORKSPACE}\\${VIRTUAL_ENV}")) {
                        bat "python -m venv ${VIRTUAL_ENV}"
                    }
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && pip install -r requirements.txt"
                }
            }
        }
        stage('Lint') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && flake8 app.py"
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && pytest"
                }
            }
        }
        stage('Coverage') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && pip install coverage"
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && coverage run -m pytest"
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && coverage report -m"
                }
            }
        }
        stage('Security Scan') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && pip install bandit"
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && bandit -r . -f txt -o bandit_report.txt"
                    bat "type bandit_report.txt"
                }
            }
        }
        stage('Deployment') {
            steps {
                script {
                    echo "Deploying application to local server..."
                    bat "mkdir ${DEPLOYDIR} || echo Directory already exists"
                    bat "xcopy /E /I /Y ${env.WORKSPACE}\\* ${DEPLOYDIR}"
                    bat "python -m venv ${DEPLOYDIR}\\venv"
                    bat "${DEPLOYDIR}\\venv\\Scripts\\activate && pip install -r ${DEPLOYDIR}\\requirements.txt"
                    bat "${DEPLOYDIR}\\venv\\Scripts\\activate && python ${DEPLOYDIR}\\app.py"
                    echo "Application deployed and executed locally."
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
